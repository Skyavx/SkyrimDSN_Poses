			<item>Pose GP 11<tag>out.group=11</tag></item>
			<item>Pose GP 12<tag>out.group=12</tag></item>
			<item>Pose GP 13<tag>out.group=13</tag></item>
			<item>Pose GP 14<tag>out.group=14</tag></item>
		</one-of>
	</rule>

	<rule id="NumSelector">
		<one-of>
			<item>1<tag>out = 1</tag></item>
