<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0"
	xmlns="http://www.w3.org/2001/06/grammar"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.w3.org/TR/speech-grammar/grammar.xsd"
	tag-format="semantics/1.0"
	root="Main">

	<!--
		Goma Pero Pero Poses

	-->
	<rule id="Main">
		<one-of>
			<item><ruleref uri="#GomaPeroPoses" /></item>
		</one-of>
	</rule>

	<rule id="GomaPeroPoses">
		<one-of>
			<item><ruleref uri="#GroupSelector" /><tag>var pose=rules.latest()</tag></item>
		</one-of>
		<ruleref uri="#NumSelector" />
		<tag>out = "SAE " + pose.group + "GOM" + rules.NumSelector</tag>
	</rule>

	<rule id="GroupSelector">
		<one-of>
			<item>Pose GP 1<tag>out.group=1</tag></item>
			<item>Pose GP 2<tag>out.group=2</tag></item>
